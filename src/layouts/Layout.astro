---
//COMPONENTS
import Head from '../app/head/head.astro';
//STYLES
import './layout.scss';
import '../app/styles/global.scss';

interface Props {
	title: string;
	description: string;
	image: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="pl">
	<Head title={title} description={description} image={image} />

	<body class="body">
		<slot />
	</body>
</html>
