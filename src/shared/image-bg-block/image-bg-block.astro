---
//STYLES
import './image-bg-block.scss';

interface Props {
	imagePath: string;
	title: string;
	alt?: string;
	linkText?: string;
	linkPath?: string;
}

const { imagePath, linkText, linkPath, title, alt } = Astro.props;
---

<section class="image-bg-block">
	<h2 class="visually-hidden">{title}</h2>
	<img class="image-bg-block__image" src={imagePath} alt={alt} width="200" height="200" />

	{
		linkPath && (
			<a class="image-bg-block__link" href={linkPath} target="_blank">
				<span class="visually-hidden">{linkText}</span>
			</a>
		)
	}
</section>
