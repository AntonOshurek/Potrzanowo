---
import { getEntry } from 'astro:content';
//STYLES
import './main.scss';
//COMPONENTS
import TextBlock from '../../../shared/text-block/text-block.astro';
import ImageBgBlock from '../../../shared/image-bg-block/image-bg-block.astro';
import InvestFilesTable from '../invest-files-table/invest-files-table.astro';

//CONTENT
const banner = await getEntry('imageBlocks', 'investment-banner');
const description = await getEntry('textBlocks', 'investment-description');

const imageBgBlock2 = await getEntry('imageBlocks', 'potrzanowo-2');
const imageBgBlock3 = await getEntry('imageBlocks', 'potrzanowo-3');
const imageBgBlock4 = await getEntry('imageBlocks', 'potrzanowo-4');
const imageBgBlock5 = await getEntry('imageBlocks', 'potrzanowo-5');
const imageBgBlock6 = await getEntry('imageBlocks', 'potrzanowo-6');
const imageBgBlock7 = await getEntry('imageBlocks', 'potrzanowo-7');
const imageBgBlockProjection0 = await getEntry('imageBlocks', 'rzut-0');
const imageBgBlockProjection1 = await getEntry('imageBlocks', 'rzut-1');
---

<main class="main">
	<ImageBgBlock
		imagePath={banner.data.imagePath}
		title={banner.data.blockTitle}
		alt={banner.data.imageAlt}
	/>

	<TextBlock data={description} />

	<ImageBgBlock
		imagePath={imageBgBlock2.data.imagePath}
		alt={imageBgBlock2.data.imageAlt}
		title={imageBgBlock2.data.blockTitle}
	/>

	<ImageBgBlock
		imagePath={imageBgBlock3.data.imagePath}
		alt={imageBgBlock3.data.imageAlt}
		title={imageBgBlock3.data.blockTitle}
	/>

	<div class="container">
		<ImageBgBlock
			imagePath={imageBgBlockProjection0.data.imagePath}
			alt={imageBgBlockProjection0.data.imageAlt}
			title={imageBgBlockProjection0.data.blockTitle}
			showTitle={true}
		/>

		<ImageBgBlock
			imagePath={imageBgBlockProjection1.data.imagePath}
			alt={imageBgBlockProjection1.data.imageAlt}
			title={imageBgBlockProjection1.data.blockTitle}
			showTitle={true}
		/>
	</div>

	<ImageBgBlock
		imagePath={imageBgBlock4.data.imagePath}
		alt={imageBgBlock4.data.imageAlt}
		title={imageBgBlock4.data.blockTitle}
	/>

	<ImageBgBlock
		imagePath={imageBgBlock5.data.imagePath}
		alt={imageBgBlock5.data.imageAlt}
		title={imageBgBlock5.data.blockTitle}
	/>

	<ImageBgBlock
		imagePath={imageBgBlock6.data.imagePath}
		alt={imageBgBlock6.data.imageAlt}
		title={imageBgBlock6.data.blockTitle}
	/>

	<InvestFilesTable />

	<ImageBgBlock
		imagePath={imageBgBlock7.data.imagePath}
		alt={imageBgBlock7.data.imageAlt}
		title={imageBgBlock7.data.blockTitle}
	/>
</main>
